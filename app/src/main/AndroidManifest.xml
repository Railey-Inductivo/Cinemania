<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cinemania">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cinemania"
        tools:targetApi="31">
        <activity
            android:name=".MysteryPage"
            android:exported="false" />
        <activity
            android:name=".ScifiPage"
            android:exported="false" />
        <activity
            android:name=".RomancePage"
            android:exported="false" />
        <activity
            android:name=".ComedyPage"
            android:exported="false" />
        <activity
            android:name=".AdventurePage"
            android:exported="false" />
        <activity
            android:name=".FantasyPage"
            android:exported="false" />
        <activity
            android:name=".ActionPage"
            android:exported="false" />
        <activity
            android:name=".HorrorPage"
            android:exported="false" />
        <activity
            android:name=".CategoryPage"
            android:exported="false" />
        <activity
            android:name=".LoginPage"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>