<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="440dp"
    android:layout_gravity="center"
    android:background="@drawable/instructionpopupstyle"
    tools:ignore="TextSizeCheck">

    <TextView
        android:id="@+id/header1"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="@font/roboto_medium"
        android:text="What is the app about?"
        android:textAlignment="textStart"
        android:textColor="#500D0D"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info1"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto"
        android:paddingTop="10sp"
        android:text="This app helps users discover amazing movies from various genres. Find your next favorite film with ease!"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="262dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="94dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cinemaniatitle" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/info1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="193dp"
        android:fontFamily="@font/roboto_medium"
        android:text="How to use?"
        android:textColor="#500D0D"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/info2"
        android:layout_width="314dp"
        android:layout_height="95dp"
        android:layout_below="@id/header2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="19dp"
        android:text="Users can browse movies by selecting a genre and find more information about the chosen movie by clicking the &quot;Learn More&quot; button. "
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/exitText"
        android:layout_width="253dp"
        android:layout_height="21dp"
        android:layout_below="@id/info2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="19dp"
        android:text="Click outside the box to exit."
        android:textSize="17sp" />

</RelativeLayout>