<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cinemaniacbg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".FantasyPage">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:rotationY="-180"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Fantasy Genre"
        android:textAlignment="textStart"
        android:textColor="#500D0D"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto"
        android:text="Fantasy enchants audiences with magical worlds, mythical beings, and epic adventures, aiming to evoke wonder."
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="101dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/barbie" />

        <TextView
            android:layout_width="266dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="98dp"
            android:text="Barbie"
            android:textColor="#500D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="32dp"
            android:text="Barbie and Ken are having the time of their lives in..."
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/barbieButton"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/buttonstyle"
            android:fontFamily="@font/roboto_medium"
            android:text="Learn More"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="101dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/wonka" />

        <TextView
            android:layout_width="266dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="98dp"
            android:text="Wonka"
            android:textColor="#500D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="32dp"
            android:text="With dreams of opening a shop in a city renowned..."
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wonkaButton"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/buttonstyle"
            android:fontFamily="@font/roboto_medium"
            android:text="Learn More"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="101dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/ghostbusters" />

        <TextView
            android:layout_width="266dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="98dp"
            android:text="Ghostbusters"
            android:textColor="#500D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="32dp"
            android:text="Three parapsychologists forced out of their..."
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ghostButton"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/buttonstyle"
            android:fontFamily="@font/roboto_medium"
            android:text="Learn More"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="101dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/jumanji" />

        <TextView
            android:layout_width="266dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="98dp"
            android:text="Jumanji"
            android:textColor="#500D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="32dp"
            android:text="When two kids find and play a magical board game..."
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jumanjiButton"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/buttonstyle"
            android:fontFamily="@font/roboto_medium"
            android:text="Learn More"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>