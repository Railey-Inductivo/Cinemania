<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/cinemaniahbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cinemaniaicon" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Welcome to Cinemania! Ready to discover your next favorite movie? "
        android:textAlignment="center"
        android:textColor="#500D0D"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23sp"
        android:fontFamily="@font/roboto"
        android:paddingTop="10sp"
        android:text="This app allows users to discover amazing movies from different genres. Users can find a movie of interest by selecting a genre and browsing through its selection. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceedButton"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:fontFamily="@font/roboto_medium"
        android:text="I Am More Than Ready!"
        android:textAllCaps="false"
        android:textColor="#FEF8DD"
        android:textSize="17sp" />

</LinearLayout>