<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/cinemaniabg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cinemaniaicon" />

    <ImageView
        android:id="@+id/appTitle"
        android:layout_width="360dp"
        android:layout_height="74dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cinemaniatitle" />

    <TextView
        android:id="@+id/appSlogan"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="3dp"
        android:text="Your Ultimate Destination for Movie Recommendations!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#500D0D"
        android:textSize="19sp" />

</LinearLayout>